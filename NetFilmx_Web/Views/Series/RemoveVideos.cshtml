@model IEnumerable<NetFilmx_Service.Dtos.Video.VideoListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remove Videos from Series</title>
</head>
<body>
    <h1>Remove Videos from Series: @ViewBag.SeriesName</h1>

    <form asp-action="RemoveVideos" method="post">
        <input type="hidden" name="seriesId" value="@ViewBag.SeriesId" />
        <ul>
            @foreach (var video in Model)
            {
                <li>
                    <input type="checkbox" name="videoIds" value="@video.Id" />
                    @video.Title
                </li>
            }
        </ul>
        <button type="submit" class="btn btn-danger">Remove Selected Videos</button>
    </form>

</body>
</html>
