@model IEnumerable<NetFilmx_Service.Dtos.Series.SeriesListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Series</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>Series</h1>
        <a asp-action="Add" class="btn btn-primary">Add New Series</a>

        @if (!Model.Any())
        {
            <p>No Series Found</p>
        }
        else
        {
            <ul class="list-group mt-3">
                @foreach (var series in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <a asp-action="Details" asp-route-seriesId="@series.Id">@series.Name</a> - @series.Price
                        </span>
                        <span>
                            <a asp-action="Edit" asp-route-seriesId="@series.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Videos" asp-route-seriesId="@series.Id" class="btn btn-info btn-sm">Videos</a>
                            <a asp-action="Users" asp-route-seriesId="@series.Id" class="btn btn-secondary btn-sm">Users</a>
                        </span>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
