@model IEnumerable<NetFilmx_Service.Dtos.Series.SeriesListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Add Series to Library</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add Series to @ViewBag.UserUsername's Library</h1>

        <form asp-action="AddSeries" method="post">
            <input type="hidden" name="userId" value="@ViewBag.UserId" />
            <input type="hidden" name="userUsername" value=" @ViewBag.UserUsername"/>
            <div class="list-group">
                @foreach (var series in Model)
                {
                    <label class="list-group-item">
                        <input type="checkbox" name="seriesIds" value="@series.Id" /> @series.Name
                        
                    </label>
                }
            </div>
            <button type="submit" class="btn btn-primary mt-3">Add Selected Series</button>
        </form>


    </div>

</body>
</html>
