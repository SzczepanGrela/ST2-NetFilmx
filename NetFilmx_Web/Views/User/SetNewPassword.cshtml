@model NetFilmx_Service.Dtos.User.UserPasswordDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Set New Password</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="~/js/validatePassword.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1>Edit User</h1>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>
                    <div>   <label> @ViewBag.UserUsername</label></div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" id="Password" onblur="validatePassword()" />
                        <span asp-validation-for="Password" class="text-danger" id="password-error"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                <button onclick="history.back()" class="btn btn-secondary mt-3">Back</button>
            </div>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }



        <script>
            // prevent sending form if validation fails

            $(document).ready(function () {
                $('#userForm').on('submit', function (e) {

                    validatePassword();
 
                    if (!isPasswordValid ) {
                        e.preventDefault();
                        alert('Please fix the errors in the form before submitting.');
                    }
                });
            });
        </script>

    }
</body>
</html>
