@model NetFilmx_Service.Dtos.User.UserEditDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit User</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="~/js/validateUsername.js"></script>
    <script src="~/js/validateEmail.js"></script>
   
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1>Edit User</h1>
            </div>
            <div class="card-body">
                <form method="post" id="userForm">
                    <div class="form-group">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" id="Username" onblur="validateUsername()" />
                        <span asp-validation-for="Username" class="text-danger" id="username-error"></span>
                    </div>
                 
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" id="Email" onblur="validateEmail()" />
                        <span asp-validation-for="Email" class="text-danger" id="email-error"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                <button onclick="history.back()" class="btn btn-secondary mt-3">Back</button>
            </div>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script>
                // prevent sending form if validation fails

            $(document).ready(function () {
                $('#userForm').on('submit', function (e) {
                    validateUsername();
                    validateEmail();

                    if (!isUsernameValid || !isEmailValid) {
                        e.preventDefault();
                        alert('Please fix the errors in the form before submitting.');
                    }
                });
            });
        </script>


    }
</body>
</html>
