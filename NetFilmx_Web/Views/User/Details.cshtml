@model NetFilmx_Service.Dtos.User.UserDetailsDto

<!DOCTYPE html>
<html>
<head>
    <title>User Details</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>User Details</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Username: @Model.Username</h5>
                <p class="card-text"><strong>ID:</strong> @Model.Id</p>
                <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <p class="card-text"><strong>Updated At:</strong> @Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <a href="/Users/Edit/@Model.Id" class="btn btn-primary">Edit</a>
                <a href="/Users" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

</body>
</html>
