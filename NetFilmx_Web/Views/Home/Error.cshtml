@{
    ViewBag.Title = "Error";
}

<h1>Error</h1>

@if (ViewBag.ErrorMessage != null)
{
    <p>@ViewBag.ErrorMessage</p>
}

@if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
{
    <ul>
        @foreach (var error in ViewBag.Errors)
        {
            <li>@error</li>
        }
    </ul>
}

<a href="@Url.Action("Index", "Home")">Back to Home</a>
