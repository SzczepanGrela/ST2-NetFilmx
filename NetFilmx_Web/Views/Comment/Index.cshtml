@model IEnumerable<NetFilmx_Service.Dtos.Comment.CommentListDto>

<h1>Comments</h1>
<a asp-action="Add" class="btn btn-primary">Add Test Comment</a>

<ul class="list-group mt-3">
    @foreach (var comment in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
                <a asp-action="Details" asp-route-seriesId="@comment.Id : ">@comment.Content</a>
            </span>
            <span>
                <a asp-action="Edit" asp-route-seriesId="@comment.Id" class="btn btn-warning btn-sm">Edit</a>


                <a asp-controller="User" asp-action="Details" asp-route-userId="@comment.UserId" class="btn btn-info btn-sm">Author</a>

            </span>
        </li>
    }
</ul>


