@model NetFilmx_Service.Dtos.Comment.CommentDetailsDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Comment Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1>Comment Details</h1>
            </div>
            <div class="card-body">
                <p><strong>Content:</strong> @Model.Content</p>
                <p><strong>Video ID:</strong> @Model.VideoId</p>
                <p><strong>User ID:</strong> @Model.UserId</p>
                <p><strong>Created At:</strong> @Model.CreatedAt</p>
                <p><strong>Updated At:</strong> @Model.UpdatedAt</p>

                <div class="btn-group" role="group" aria-label="Comment Actions">
                   

                    <button type="button" class="btn btn-danger mx-1" data-toggle="modal" data-target="#deleteModal">
                        Delete
                    </button>

                    <a asp-action="Details" asp-controller="Video" asp-route-id="@Model.VideoId" class="btn btn-info mx-1">Video Details</a>
                    <a asp-action="Details" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-info mx-1">User Details</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this comment?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="commentId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



</body>
</html>
