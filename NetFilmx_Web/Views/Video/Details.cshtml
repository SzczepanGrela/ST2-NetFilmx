@model NetFilmx_Service.Dtos.Video.VideoDetailsDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Video Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Video Details</h1>
                <div class="btn-group" role="group" aria-label="Video Actions">
                    <form asp-action="Edit" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning mx-1">Edit</button>
                    </form>

                    <form asp-action="Categories" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <input type="hidden" name="videoName" value="@Model.Title" />
                        <button type="submit" class="btn btn-info mx-1">Categories</button>
                    </form>

                    <form asp-action="Tags" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <input type="hidden" name="videoName" value="@Model.Title" />
                        <button type="submit" class="btn btn-info mx-1">Tags</button>
                    </form>

                    <form asp-action="Series" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <input type="hidden" name="videoName" value="@Model.Title" />
                        <button type="submit" class="btn btn-info mx-1">Series</button>
                    </form>

                    <form asp-action="Comments" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <input type="hidden" name="videoName" value="@Model.Title" />
                        <button type="submit" class="btn btn-info mx-1">Comments</button>
                    </form>

                    <button type="button" class="btn btn-danger mx-1" data-toggle="modal" data-target="#deleteModal">Delete</button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.VideoUrl))
                        {
                            <div class="mb-3">
                                <iframe width="100%" height="315" src="https://www.youtube.com/embed/@Model.VideoUrl"
                                        frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media;
                                gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <p><strong>Name:</strong> @Model.Title</p>
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Price:</strong> @Model.Price</p>
                        <p><strong>Video URL:</strong> https://www.youtube.com/watch?v=@Model.VideoUrl</p>
                        <p><strong>Thumbnail URL:</strong> @Model.ThumbnailUrl</p>
                        <p><strong>Release Date:</strong> @Model.CreatedAt</p>
                        <p><strong>Last Modified:</strong> @Model.UpdatedAt</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this video?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
