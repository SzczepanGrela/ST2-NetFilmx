@model NetFilmx_Service.Dtos.Video.VideoDetailsDto
category
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Video Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1>Video Details</h1>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @Model.Title</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Price:</strong> @Model.Price</p>
                <p><strong>Video URL:</strong> @Model.VideoUrl</p>
                <p><strong>Thumbnail URL:</strong> @Model.ThumbnailUrl</p>
                <p><strong>Release Date:</strong> @Model.CreatedAt</p>
                <p><strong>Last Modified:</strong> @Model.UpdatedAt</p>



                <div class="btn-group" role="group" aria-label="Video Actions">

                    <form asp-action="Edit" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary mx-1">Edit</button>
                    </form>


                    <form asp-action="Videos" method="get" style="display:inline;">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <input type="hidden" name="videoName" value="@Model.Title" />
                        <button type="submit" class="btn btn-info mx-1">Videos</button>
                    </form>

                    <button type="button" class="btn btn-danger mx-1" data-toggle="modal" data-target="#deleteModal">Delete</button>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this video?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="videoId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

