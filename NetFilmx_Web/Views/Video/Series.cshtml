@model IEnumerable<NetFilmx_Service.Dtos.Series.SeriesListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Series in Video</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Series in Video: @ViewBag.VideoName</h1>

        <div class="mb-3">
            <form asp-action="AddSeries" method="get" class="d-inline">
                <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
                <input type="hidden" name="videoTitle" value="@ViewBag.VideoTitle" />
                <button type="submit" class="btn btn-primary btn-sm mb-2">Add Series</button>
            </form>

            <form asp-action="RemoveSeries" method="get" class="d-inline">
                <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
                <input type="hidden" name="videoTitle" value="@ViewBag.VideoTitle" />
                <button type="submit" class="btn btn-danger btn-sm mb-2">Remove Series</button>
            </form>
        </div>

        @if (!Model.Any())
        {
            <p>No Series Found For @ViewBag.VideoName</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var series in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Details", "Series", new { seriesId = series.Id })">@series.Name</a>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
