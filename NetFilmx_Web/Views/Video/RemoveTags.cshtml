@model IEnumerable<NetFilmx_Service.Dtos.Tag.TagListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remove Tags from Video</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Remove Tags from Video: @ViewBag.VideoName</h1>

        <form asp-action="RemoveTags" method="post">
            <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
            <div class="list-group">
                @foreach (var tags in Model)
                {
                    <label class="list-group-item">
                        <input type="checkbox" name="seriesIds" value="@tags.Id" />
                        @tags.Name
                    </label>
                }
            </div>
            <button type="submit" class="btn btn-danger mt-3">Remove Selected Tags</button>
        </form>

    </div>


</body>
</html>
