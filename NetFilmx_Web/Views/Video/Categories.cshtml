@model IEnumerable<NetFilmx_Service.Dtos.Category.CategoryListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Categories in Video</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Categories in Video: @ViewBag.VideoName</h1>

        <div class="mb-3">
            <form asp-action="AddCategories" method="get" class="d-inline">
                <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
                <input type="hidden" name="videoName" value="@ViewBag.VideoName" />
                <button type="submit" class="btn btn-primary btn-sm mb-2">Add Categories</button>
            </form>

            <form asp-action="RemoveCategories" method="get" class="d-inline">
                <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
                <input type="hidden" name="videoName" value="@ViewBag.VideoName" />
                <button type="submit" class="btn btn-danger btn-sm mb-2">Remove Categories</button>
            </form>
        </div>

        <ul class="list-group">
            @foreach (var category in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("Details", "Category", new { categoryId = category.Id })">@category.Name</a>
                </li>
            }
        </ul>

    </div>
</body>
</html>
