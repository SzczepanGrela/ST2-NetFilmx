@model IEnumerable<NetFilmx_Service.Dtos.Tag.TagListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tags</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>



<h1>Tags</h1>
<a asp-action="Add" class="btn btn-primary">Add New Tag</a>

<ul class="list-group mt-3">
    @foreach (var tag in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
                <a asp-action="Details" asp-route-tagId="@tag.Id">@tag.Name</a>
            </span>
            <span>
                <a asp-action="Edit" asp-route-tagId="@tag.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Videos" asp-route-tagId="@tag.Id" class="btn btn-info btn-sm">Videos</a>
                  
            </span>
        </li>
    }
</ul>

</body>
</html>

