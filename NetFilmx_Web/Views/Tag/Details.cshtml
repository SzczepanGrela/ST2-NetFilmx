@model NetFilmx_Service.Dtos.Tag.TagDetailsDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tag Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Tag Details</h1>
                <div class="btn-group" role="group" aria-label="Tag Actions">
                    <form asp-action="Edit" method="get" style="display:inline;">
                        <input type="hidden" name="tagId" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning mx-1">Edit</button>
                    </form>
                    <form asp-action="Videos" method="get" style="display:inline;">
                        <input type="hidden" name="tagId" value="@Model.Id" />
                        <input type="hidden" name="tagName" value="@Model.Name" />
                        <button type="submit" class="btn btn-info mx-1">Videos</button>
                    </form>
                    <button type="button" class="btn btn-danger mx-1" data-toggle="modal" data-target="#deleteModal">Delete</button>
                </div>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @Model.Name</p>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this tag?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="tagId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
