@model NetFilmx_User.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<!-- Profile Header -->
<div class="profile-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="profile-title">ðŸ‘¤ My Profile</h1>
                <p class="profile-subtitle">Manage your account and preferences</p>
            </div>
        </div>
    </div>
</div>

<!-- Profile Content -->
<div class="container">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-3 col-md-4">
            <div class="profile-sidebar">
                <div class="profile-avatar">
                    <img src="/images/default-avatar.png" alt="Profile Avatar" class="avatar-img">
                    <h4>@Model.User.Username</h4>
                    <p class="user-email">@Model.User.Email</p>
                </div>
                
                <nav class="profile-nav">
                    <a href="/Profile" class="nav-item active">
                        <i class="fas fa-user"></i> Profile Info
                    </a>
                    <a href="/Profile/Purchases" class="nav-item">
                        <i class="fas fa-shopping-bag"></i> Purchase History
                    </a>
                    <a href="/Profile/Favorites" class="nav-item">
                        <i class="fas fa-heart"></i> My Favorites
                    </a>
                    <a href="/Profile/Settings" class="nav-item">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                </nav>
            </div>
        </div>
        
        <!-- Profile Content -->
        <div class="col-lg-9 col-md-8">
            <div class="profile-content">
                <div class="content-header">
                    <h2>Profile Information</h2>
                    <a href="/Profile/Edit" class="btn btn-primary">Edit Profile</a>
                </div>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <div class="profile-info">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Username</label>
                                <p class="info-value">@Model.User.Username</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Email</label>
                                <p class="info-value">@Model.User.Email</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Member Since</label>
                                <p class="info-value">@DateTime.Now.ToString("MMMM yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Account Status</label>
                                <p class="info-value">
                                    <span class="badge bg-success">Active</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Stats -->
                <div class="quick-stats">
                    <h3>Account Statistics</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-icon">ðŸŽ¬</div>
                                <div class="stat-info">
                                    <h4>0</h4>
                                    <p>Videos Purchased</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-icon">ðŸ“º</div>
                                <div class="stat-info">
                                    <h4>0</h4>
                                    <p>Series Purchased</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-card">
                                <div class="stat-icon">ðŸ’°</div>
                                <div class="stat-info">
                                    <h4>$0.00</h4>
                                    <p>Total Spent</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Recommended Videos -->
                @if (Model.RecommendedVideos?.Any() == true)
                {
                    <div class="video-section">
                        <h3>Recommended for You</h3>
                        <div class="row">
                            @foreach (var video in Model.RecommendedVideos)
                            {
                                <div class="col-md-4 col-sm-6 col-12">
                                    <a href="/Video/Details/@video.Id" class="video-card">
                                        <div class="video-thumbnail">
                                            <img src="@video.ThumbnailUrl" alt="@video.Title" class="video-image">
                                            <div class="video-overlay">
                                                <div class="play-button">â–¶</div>
                                            </div>
                                        </div>
                                        <div class="video-info">
                                            <h5>@video.Title</h5>
                                            <p class="video-price">$@video.Price</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Trending Videos -->
                @if (Model.TrendingVideos?.Any() == true)
                {
                    <div class="video-section">
                        <h3>Trending Now</h3>
                        <div class="row">
                            @foreach (var video in Model.TrendingVideos)
                            {
                                <div class="col-md-4 col-sm-6 col-12">
                                    <a href="/Video/Details/@video.Id" class="video-card">
                                        <div class="video-thumbnail">
                                            <img src="@video.ThumbnailUrl" alt="@video.Title" class="video-image">
                                            <div class="video-overlay">
                                                <div class="play-button">â–¶</div>
                                            </div>
                                        </div>
                                        <div class="video-info">
                                            <h5>@video.Title</h5>
                                            <p class="video-price">$@video.Price</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Recent Activity -->
                <div class="recent-activity">
                    <h3>Recent Activity</h3>
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon">ðŸ‘‹</div>
                            <div class="activity-content">
                                <p><strong>Welcome to NetFilmx!</strong></p>
                                <small class="text-muted">Account created today</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Profile Styles */
.profile-header {
    background: linear-gradient(135deg, #e50914 0%, #000000 100%);
    color: white;
    padding: 3rem 0;
    margin-bottom: 2rem;
}

.profile-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.profile-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
}

.profile-sidebar {
    background: #2a2a2a;
    border-radius: 8px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.profile-avatar {
    text-align: center;
    margin-bottom: 2rem;
}

.avatar-img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #e50914;
    margin-bottom: 1rem;
}

.profile-avatar h4 {
    color: #ffffff;
    margin-bottom: 0.5rem;
}

.user-email {
    color: #aaa;
    font-size: 0.9rem;
}

.profile-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    color: #e5e5e5;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
}

.nav-item:hover {
    background: #444;
    color: #ffffff;
    text-decoration: none;
}

.nav-item.active {
    background: #e50914;
    color: #ffffff;
}

.profile-content {
    background: #2a2a2a;
    border-radius: 8px;
    padding: 2rem;
}

.content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.content-header h2 {
    color: #ffffff;
    margin: 0;
}

.profile-info {
    margin-bottom: 3rem;
}

.info-group {
    margin-bottom: 1.5rem;
}

.info-group label {
    display: block;
    font-weight: 600;
    color: #aaa;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.info-value {
    color: #ffffff;
    font-size: 1.1rem;
    margin: 0;
}

.quick-stats {
    margin-bottom: 3rem;
}

.quick-stats h3 {
    color: #ffffff;
    margin-bottom: 1.5rem;
}

.stat-card {
    background: #333;
    border-radius: 8px;
    padding: 1.5rem;
    text-align: center;
    margin-bottom: 1rem;
}

.stat-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
}

.stat-info h4 {
    color: #ffffff;
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
}

.stat-info p {
    color: #aaa;
    font-size: 0.9rem;
    margin: 0;
}

.recent-activity h3 {
    color: #ffffff;
    margin-bottom: 1.5rem;
}

.activity-list {
    background: #333;
    border-radius: 8px;
    padding: 1.5rem;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid #444;
}

.activity-item:last-child {
    border-bottom: none;
}

.activity-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e50914;
    border-radius: 50%;
}

.activity-content p {
    color: #ffffff;
    margin: 0;
}

.activity-content small {
    color: #aaa;
}

/* Video Section Styles */
.video-section {
    margin-bottom: 3rem;
}

.video-section h3 {
    color: #ffffff;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
}

.video-card {
    display: block;
    background: #333;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 1rem;
    text-decoration: none;
    color: inherit;
}

.video-card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(0,0,0,0.5);
    text-decoration: none;
    color: inherit;
}

.video-thumbnail {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
}

.video-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.video-card:hover .video-overlay {
    opacity: 1;
}

.play-button {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: #e50914;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
    transition: all 0.3s ease;
}

.video-card:hover .play-button {
    background: #ffffff;
    color: #e50914;
    transform: scale(1.1);
}

.video-info {
    padding: 1rem;
}

.video-info h5 {
    color: #ffffff;
    margin-bottom: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
}

.video-price {
    color: #e50914;
    font-weight: 600;
    margin: 0;
}

@@media (max-width: 768px) {
    .content-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .profile-nav {
        flex-direction: row;
        overflow-x: auto;
        gap: 1rem;
        padding-bottom: 1rem;
    }
    
    .nav-item {
        white-space: nowrap;
        min-width: fit-content;
    }
    
    .video-thumbnail {
        height: 150px;
    }
}
</style>