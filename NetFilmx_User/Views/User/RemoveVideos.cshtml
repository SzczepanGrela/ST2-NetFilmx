@model IEnumerable<NetFilmx_Service.Dtos.Video.VideoListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Remove Videos from Library</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Remove Videos from User: @ViewBag.UserUsername's Library</h1>

        @if (!Model.Any())
        {
            <p>No Videos Found in @ViewBag.UserUsername's Library</p>
        }
        else
        {
            <form asp-action="RemoveVideos" method="post">
                <input type="hidden" name="userId" value="@ViewBag.UserId" />
                <input type="hidden" name="userUsername" value="@ViewBag.UserUsername" />
                <div class="list-group">
                    @foreach (var video in Model)
                    {
                        <label class="list-group-item">
                            <input type="checkbox" name="videoIds" value="@video.Id" />
                            @video.Title
                        </label>
                    }
                </div>
                <button type="submit" class="btn btn-danger mt-3">Remove Selected Videos</button>
            </form>
        }
    </div>
</body>
</html>
