@model IEnumerable<NetFilmx_Service.Dtos.Comment.CommentListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Comments under Video</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Comments under Video: @ViewBag.VideoName</h1>

        @if (!Model.Any())
        {
            <p>No Comments Found For @ViewBag.VideoName</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var comment in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <a asp-controller="Comment" asp-action="Details" asp-route-commentId="@comment.Id">@comment.Content</a>
                        </span>
                        <span>
                            <a asp-controller="User" asp-action="Details" asp-route-userId="@comment.UserId" class="btn btn-info btn-sm">Author</a>
                        </span>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
