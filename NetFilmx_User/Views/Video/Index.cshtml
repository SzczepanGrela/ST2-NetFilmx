@model IEnumerable<NetFilmx_Service.Dtos.Video.VideoListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Videos List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

</head>
<body>
    <div class="container mt-5">
        <h1>Videos</h1>
        <a asp-action="Add" class="btn btn-primary">Add New Video</a>

        @if (!Model.Any())
        {
            <p>No Videos Found</p>
        }
        else
        {
            <ul class="list-group mt-3">
                @foreach (var video in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-route-videoId="@video.Id" class="d-flex align-items-center">
                            <img src="@video.ThumbnailUrl" alt="Thumbnail" class="img-fluid" style="height: 2cm; margin-right: 10px;" />
                            <span>@video.Title</span>
                        </a>
                        <span>
                            <a asp-action="Edit" asp-route-videoId="@video.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Comments" asp-route-videoId="@video.Id" class="btn btn-info btn-sm">Comments</a>
                        </span>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
