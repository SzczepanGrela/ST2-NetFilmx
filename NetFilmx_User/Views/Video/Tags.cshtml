@model IEnumerable<NetFilmx_Service.Dtos.Tag.TagListDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tags in Video</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Tags in Video: @ViewBag.VideoName</h1>

        <div class="mb-3">
            <form asp-action="AddTags" method="get" class="d-inline">
                <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
                <input type="hidden" name="videoName" value="@ViewBag.VideoName" />
                <button type="submit" class="btn btn-primary btn-sm mb-2">Add Tags</button>
            </form>

            <form asp-action="RemoveTags" method="get" class="d-inline">
                <input type="hidden" name="videoId" value="@ViewBag.VideoId" />
                <input type="hidden" name="videoName" value="@ViewBag.VideoName" />
                <button type="submit" class="btn btn-danger btn-sm mb-2">Remove Tags</button>
            </form>
        </div>

        @if (!Model.Any())
        {
            <p>No Tags Found For @ViewBag.VideoName</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var tag in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Details", "Tag", new { tagId = tag.Id })">@tag.Name</a>
                    </li>
                }
            </ul>
        }
    </div>
</body>
</html>
